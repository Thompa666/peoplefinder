<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xware.peoplefinder.HomeActivity"
    tools:showIn="@layout/activity_home">

    <Button
        android:text="Add Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/bAddPerson"
        android:layout_below="@+id/bShowPlaceList"
        android:layout_alignLeft="@+id/bShowPersonList"
        android:layout_alignStart="@+id/bShowPersonList"/>
    <Button
        android:text="Show People"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="48dp"
        android:id="@+id/bShowPersonList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:text="Show Places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/bShowPlaceList"
        android:layout_below="@+id/bShowPersonList"
        android:layout_alignLeft="@+id/bAddPerson"
        android:layout_alignStart="@+id/bAddPerson"/>
    <Button
        android:text="Add Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bAddPlace"
        android:layout_below="@+id/bAddPerson"
        android:layout_alignLeft="@+id/bAddPerson"
        android:layout_alignStart="@+id/bAddPerson"
        android:layout_marginTop="19dp"/>
    <Button
        android:text="Find Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFindMe"
        android:layout_alignTop="@+id/bAddPlace" android:layout_alignLeft="@+id/bAddPlace"
        android:layout_alignStart="@+id/bAddPlace" android:layout_marginTop="73dp"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.xware.peoplefinder.PersonDetailActivity">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:paddingTop="20dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Person Detail" />

<!--
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
        -->
        <android.widget.LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

        <Button
            android:text="Send Email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/bEmail"

            android:layout_marginTop="0dp"

            android:elevation="11dp"/>
        <Button
            android:text="Show Map"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/bShowMap"
            android:layout_alignRight="@+id/bEmail"
            android:layout_marginTop="0dp"

            tools:text="Show Map"/>
        <Button
            android:text="Phone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/bPhone"
            android:layout_alignRight="@+id/bShowMap"

        />



        </android.widget.LinearLayout>
        <Button
            android:text="Add Picture"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/bPicture"

            android:layout_marginTop="0dp"

            android:elevation="11dp"/>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/darkRed"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <include layout="@layout/person_detail"/>
    </FrameLayout>
    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="200dp"


            />
    </FrameLayout>
    </LinearLayout>

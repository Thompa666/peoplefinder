<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkRed</item>
        <!--item name="android:windowBackground">@color/aqua</ item -->
        <!-- item name="android:colorBackground">@android:color/holo_orange_dark</item -->
        <item name="android:colorBackground">@color/medBlue</item>
        <item name="android:windowBackground">@color/medBlue</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>

    </style>

    <style name="MyCheckBoxStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorSecondary">@color/red</item>
        <item name="background">@color/aqua</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="peopelfindertheme" parent="AppTheme" />

</resources>
